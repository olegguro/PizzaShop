<h2>Wellcome to Pizza Shop!</h2>

<div class="row">

<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
		<%= p.title %>
		</div>
	<div>
		<img  src="<%= p.path_to_image %>" width="200" height="200"/>
	</div>
	<div >
		<%= p.description %>
	</div>
	<div >
		Size: <%= p.size %>
	</div>
	<div >
		Price: <%= p.price %>
	</div>
	<div>
		<button type="button" class="btn btn-success" onclick="add_to_card()">Select</button>
	</div>
</div>
<% end %>

</div>

